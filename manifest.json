{
    "manifest_version": 2,
    "name": "Social Media Scam Alert",
    "version": "1.0",
    "description": "Alerts users when they visit known scam pages on Facebook and Instagram",
    "permissions": [
        "webNavigation",
        "notifications",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}